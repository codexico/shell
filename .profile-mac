mkcd() { mkdir -p "$@" && cd "$_"; }

pivotinit() {
 mkcd -p ~/Projetos/"$1";
mkdir material;
mkdir w;
mkcd src;
git clone git@git.ppivot.com.br:"$1";
ls -la;
pwd;
open .;
subl .;
open "http://localhost/$1";
}




export PATH=$PATH:~/bin

